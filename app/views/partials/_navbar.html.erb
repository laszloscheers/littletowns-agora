      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="navbar-collapse collapse w-100 ">
        <ul class="navbar-nav ms-auto">
            <li class="nav-item active mt-1 d-flex justify-content-end align-items-center">
                <%= link_to "Home", root_path, class: "nav-link nav-visible" %>
