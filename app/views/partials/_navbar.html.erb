            <li class="nav-item mt-1 d-flex justify-content-end align-items-center">
                <%= link_to "Tourist Guide", tourist_guide_index_path, class: "nav-link nav-visible" %>
            </li>
            <li class="nav-item mt-1 d-flex justify-content-end align-items-center">
                <%= link_to "Accommodations", accommodations_path, class: "nav-link nav-visible" %>
            </li>
            <li class="nav-item dropdown mt-1 d-flex justify-content-end align-items-center">
              <a class="nav-link nav-visible dropdown-toggle me-1" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
